{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "SFTPCopy Action Properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Host",
          "name": "host"
        },
        {
          "widget-type": "textbox",
          "label": "Port",
          "name": "port"
        },
        {
          "widget-type": "textbox",
          "label": "User Name",
          "name": "userName"
        },
        {
          "name": "Authentication",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "privatekey-select",
            "options": [
              {
                "id": "privatekey-select",
                "label": "PrivateKey"
              },
              {
                "id": "password-select",
                "label": "Password"
              }
            ]
          }
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        },
        {
          "widget-type": "textarea",
          "label": "PrivateKey",
          "name": "privateKey"
        },
        {
          "widget-type": "password",
          "label": "PrivateKey Passphrase",
          "name": "passphrase"
        },
        {
          "widget-type": "textbox",
          "label": "Source Directory",
          "name": "srcDirectory"
        },
        {
          "widget-type": "textbox",
          "label": "Destination Directory",
          "name": "destDirectory"
        },
        {
          "widget-type": "textbox",
          "label": "Variable name to hold list of copied file names",
          "name": "variableNameHoldingFileList",
          "widget-attributes": {
            "default": "sftp.copied.file.names"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Regex to match files that needs to be copied",
          "name" : "fileNameRegex"
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for SSH",
          "name": "sshProperties",
          "widget-attributes": {
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties for File System",
          "name": "fileSystemProperties",
          "widget-attributes": {
            "kv-delimiter": "=>",
            "showDelimiter": "false",
            "key-placeholder": "key",
            "value-placeholder": "value"
          }
        }
      ]
    }
  ],
  "outputs": [
  ],
  "filters": [
    {
      "name": "AuthByPrivateKey",
      "condition": {
        "expression": "Authentication == 'privatekey-select'"
      },
      "show":[
        {
          "type": "property",
          "name": "privateKey"
        },
        {
          "type": "property",
          "name": "passphrase"
        }
      ]
    },
    {
      "name": "AuthByPassword",
      "condition": {
        "expression": "Authentication == 'password-select'"
      },
      "show":
      [
        {
          "type": "property",
          "name": "password"
        }
      ]
    }
  ]
}
